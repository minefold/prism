#!/usr/bin/env ruby
require 'bundler/setup'
Bundler.require :default

$:.unshift File.join File.dirname(__FILE__), '../lib'
require 'minefold'

abort "Usage: stop-local-world id" unless ARGV.length == 1
world_id = ARGV.shift

world = LocalWorld.running.find {|w| w.id == world_id }

world.stop!
world.backup!