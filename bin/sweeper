#!/usr/bin/env ruby
# encoding: UTF-8
require 'bundler/setup'
Bundler.require :default

$:.unshift File.join File.dirname(__FILE__), '../lib'
require 'minefold'
require 'prism/back'

STDOUT.sync = true
EM.epoll

module Prism
  EM.run do
    puts "Started. #{Fold.env} mode"
    Sweeper.new.perform_sweep
    EM.add_periodic_timer(3 * 60) { Sweeper.new.perform_sweep }
  end
end