#!/usr/bin/env ruby
# encoding: UTF-8

require 'bundler/setup'
Bundler.require :default

$:.unshift File.join File.dirname(__FILE__), '../lib'
require 'minefold'

abort "Usage: start-world id" unless ARGV.length == 1
world_id = ARGV.shift

exit 0 if Worlds.running.any? {|w| w[:id] == world_id }

Worlds.new.start world_id